<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="com.jikexueyuan.rpc"/>
    <context:annotation-config/>

    <bean id="consumerConfig" class="com.jikexueyuan.rpc.invoke.ConsumerConfig">
        <property name="url" value="http://127.0.0.1:8888/invoke"/>
    </bean>

    <bean id="speakInterfaceInvoker" class="com.jikexueyuan.rpc.proxy.ConsumerProxyFactory">
        <property name="consumerConfig" ref="consumerConfig"/>
        <property name="clazz" value="com.jikexueyuan.rpc.SpeakInterface"/>
    </bean>
    <bean id="speakInterface" factory-bean="speakInterfaceInvoker" factory-method="create"/>
</beans>